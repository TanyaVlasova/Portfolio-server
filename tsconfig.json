{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES6"],
    "module": "CommonJS",
    "rootDir": "./src",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": { "esm": true }
}
